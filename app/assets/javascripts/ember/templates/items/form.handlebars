<div class="row-fluid">
    {{#with newItem}}
    <div class="row-fluid">
      {{view Ember.TextField valueBinding="title" placeholder="Title" class="span10"}}
    </div>

    <div class="row-fluid">
      {{view Ember.TextArea valueBinding="description" placeholder="Description" class="span10"}}
    </div>

    <div class="row-fluid">
      {{view Ember.TextField valueBinding="paypal_email"  placeholder="Paypal Email" class="span10"}}
    </div>

    <div class="row-fluid">
      {{ view Bidbin.CreateItemButtonView target="Bidbin.itemsController" action="create"}}
    </div>
    {{/with}}
</div>
