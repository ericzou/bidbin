<div class='new-item'>
  <div class='row-fluid'>
    {{ view Bidbin.FormPictureView }}
    {{ view Bidbin.FormItemView }}
  </div>
  <div class='row-fluid'>
    <div class='actions'>
      {{#view Bidbin.CreateItemButtonView target="Bidbin.itemsController" action="create" class="btn generate-link btn-success"}}
        Generate a link for this item
      {{/view}}
    </div>
  </div>
</div>

{{#if newItem.slug}}
<div id="row-fluid">
  <h3>Here is the direct link to your item</h3>
  <p>
    <a {{bindAttr href="newItem.url"}} target="_blank">{{newItem.url}}</a>
  </p>
</div>
{{/if}}
