<div class='new-item'>
  <div class='row-fluid'>
    {{ view Bidbin.FormPictureView }}
    <div class='item-text'>
      <div class='title'>
        <input placeholder='Enter a title' type='textfield' />
      </div>
      <div class='description'>
        <textarea placeholder='Enter a description' rows='10'></textarea>
      </div>
      <div class='paypal_email'>
        <input placeholder='Enter your paypal email address' type='textfield' />
      </div>
    </div>
  </div>
  <div class='row-fluid'>
    <div class='actions'>
      <a class='btn generate-link btn-success'>Generate a link for this item</a>
    </div>
  </div>
</div>
